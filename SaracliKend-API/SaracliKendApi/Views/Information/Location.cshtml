@model InformationVM
@{
    ViewData["Title"] = "Location";
}

<    <div class="container">
    <div class="row">
        <div class="col-md-12 mt-3">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
            <h3 style="display: inline;">Fiziki Mövqe</h3>
        </div>
        @if(Model != null) {
              <div class="col-md-12">
            <div style="overflow-wrap:anywhere;" class="mt-3">@Html.Raw(Model.DescriptionFirstPart)</div>
            <div class="d-flex mt-5 mb-5">
                <div class="col-md-12" style="padding:70px">
                    @if (Model.Images.Count > 0)
                    {
                            <img style="width: 100%; height:542px" src="~/img/information/@Model.Images?[0]" alt="">
                    }
                </div>
            </div>
            <div style="overflow-wrap:anywhere;">@Html.Raw(Model.DescriptionSecondPart)</div>
        </div>
        }else{
        <p>Hec bir melumat tapilmadi.</p>
        }
      
    </div>
</div>

