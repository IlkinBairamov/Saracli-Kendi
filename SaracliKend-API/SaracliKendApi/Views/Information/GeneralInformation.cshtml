@model InformationVM
@{
    ViewData["Title"] = "GeneralInformation";
}

<div class="container">
    <div class="row">
    <div class="col-md-12 mt-3">
        <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="./assets/img/Ellipse 4.png" alt="">
        <h3 style="display: inline;">Umumi Melumat</h3>
    </div>
    <div class="col-md-12">
            <p class="mt-3">@Html.Raw(Model.DescriptionFirstPart)</p>
            <div class="d-flex mt-5 mb-5 justify-content-between">
            @foreach (var item in Model.Images)
            {
                <div class="col-md-5">
                    <img style="width: 100%;" src="~/img/@item" alt="">
                </div>
            }
        </div>
            <p>@Html.Raw(Model.DescriptionSecondPart)</p>
    </div>
    </div>
</div>

