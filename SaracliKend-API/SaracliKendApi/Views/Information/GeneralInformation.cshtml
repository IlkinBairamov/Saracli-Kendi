@model InformationVM
@{
    ViewData["Title"] = "GeneralInformation";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mt-3">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
            <h3 style="display: inline;">Umumi Melumat</h3>
        </div>
        @if (Model != null)
        {
        <div class="mt-3" style="overflow-wrap:anywhere;">@Html.Raw(Model.DescriptionFirstPart)</div>
            <div class="row d-flex mt-5 mb-5 justify-content-between">
                @foreach (var item in Model.Images)
                {
                        <div class="col-md-5 ">
                            <img style="width: 100%; height:334px" src="~/img/information/@item" alt="">
                        </div>
                }
            </div>
            <div style="overflow-wrap:anywhere;">@Html.Raw(Model.DescriptionSecondPart)</div>
        }
        else
        {
            <p>Hec bir melumat tapilmadi.</p>
        }
    

    </div>
</div>