@model List<PoetryVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="padding-left: 0;" id="seirler">
    <div class="row">
        <div class="col-md-12 mt-3">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
            <h3 style="display: inline; color: black;">Şeirlər</h3>
        </div>
        @if (Model.Count > 0)
        {
            for (var i = 0; i < Model.Count; i++)
            {
                <div class="col-md-4">
                    <p style="margin-left: 25px; font-weight: bold; color: black;" class="mt-3">@Model[i].Name</p>
                    <div style="overflow-wrap:anywhere; padding:20px"> @Html.Raw(@Model[i].Content)</div>
                    <div class="d-flex justify-content-end">
                        <a style="text-decoration: none;" class="etrafliButton" asp-controller="Poetry" asp-action="AllPoetriesByWriter" asp-route-writerId="@Model[i].PersonId">
                            Etrafli
                        </a>
                    </div>
                </div>
                if(i+1%3==0){
                    <hr style="color: #00B0FF;" class="mt-3">
                }
            }
        }
        else{
            <p>Hec bir melumat tapilmadi.</p>
        }
    </div>
</div>

