@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

      <!-- slider -->
    <div id="slider">
      <div class="container" style="padding: 0;">
        <div class="row">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li  data-target="#carouselExampleIndicators" data-slide-to="0" class="active "><div ></div></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1" ><div ></div></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2" ><div ></div></li>
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.SliderImages.Count; i++)
                    {
                        if(i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/img/slider/@Model.SliderImages[i].Path" alt="First slide">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/img/slider/@Model.SliderImages[i].Path" alt="First slide">
                            </div>
                        }
                    }
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
              </div>
            </div>
           
        </div>
      </div>
    </div>
    <!-- slider end -->

    <!-- section news and fotos -->
    <section id="news">
      <div class="container">
        <div class="row">
          <div class="col-md-6 leftSide">
            <div class="mb-3">
              <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
              <h3 style="display: inline;">Son Xeberler</h3>
            </div>
            @if (Model.News.Count > 0)
            {
                    for (var i = 0; i < Model.News.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="col-md-12 row  d-flex">
                                <div class="col-md-3 image-holder">
                                    <img class="img" width="100%" src="~/img/news/@Model.News[i].Image" alt="sexsiyyetler">
                                </div>
                                <div class="col-md-8">
                                    <div class="multiline">
                                        <div style="margin-bottom:25px; overflow-wrap:anywhere " class="ellipsis">
                                        @Html.Raw(Model.News[i].Content)
                                    </div>
                                    </div>
                                    <div class="more-info">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@Model.News[i].Id">Etrafli</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12 row mt-3 d-flex">
                                <div class="col-md-3 image-holder">
                                    <img class="img" width="100%" src="~/img/news/@Model.News[i].Image" alt="sexsiyyetler">
                                </div>
                                 <div class="col-md-8">
                                    <div class="multiline">
                                        <div style="margin-bottom:25px; overflow-wrap:anywhere " class="ellipsis">
                                        @Html.Raw(Model.News[i].Content)
                                    </div>
                                    </div>
                                    <div class="more-info">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@Model.News[i].Id">Etrafli</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
          </div>
            <div class="col-md-6 leftSide">
                <div class="mb-4">
                    <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
                    <h3 style="display: inline; color: #333333;">Şəhidlər</h3>
                </div>
                <div class="col-md-12 d-flex">
                    @if (Model.Martyrs.Count > 0)
                    {
                        foreach (var item in Model.Martyrs)
                        {
                            <div class="col-md-4" style="text-align:center">
                                <div>
                                    <img class="img" width="100%" src="~/img/person/@item.Image" alt="sexsiyyetler">
                                </div>
                                <a asp-controller="Person" asp-action="Index" asp-route-personType="@PersonType.Martyr" asp-route-id="@item.Id" style="color: #333333; text-decoration: none;">@item.Name @item.Surname</a>
                            </div>
                        }
                    }
                </div>
                <div class="mb-4">
                    <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
                    <h3 style="display: inline; color: #333333;">Qazilər</h3>
                </div>
                <div class="col-md-12 d-flex">
                    @if (Model.Ghazis.Count > 0)
                    {
                        foreach (var item in Model.Ghazis)
                        {
                            <div class="col-md-4" style="text-align:center">
                                <div>
                                    <img class="img" width="100%" src="~/img/person/@item.Image" alt="sexsiyyetler">
                                </div>
                                <a asp-controller="Person" asp-action="Index" asp-route-personType="@PersonType.Ghazi" asp-route-id="@item.Id" style="color: #333333; text-decoration: none;">@item.Name @item.Surname</a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
      </div>
    </section>
    <!-- new and fotos section end -->
    
    <!-- banner section start -->
    <section id="banner">
    <div class="container">
      <div class="row">
          <div class="col-md-12">
            <img style="width: 100%;" src="~/img/Rectangle 5.png" alt="">
            <div class="textOnImg">
                    <h2>Saraclı Kəndi</h2>
                    <p></p>
                    <a asp-controller="Information" asp-action="GeneralInformation">Ətraflı</a>
            </div>
          </div>
      </div>
    </div>
    </section>
    <!-- banner section end -->
<!-- foto video section start -->
<section id="fotovideo">
    <div class="container">
        <div class="row">
            <div class="col-md-6 leftSide">
                <div class="mb-4">
                    <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
                    <h3 style="display: inline; color: #333333;">Foto</h3>
                </div>
                <div class="col-md-12 d-flex">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="col-md-4">
                            <img class="img" width="100%" style="height:142px" src="~/img/@photo.Path" alt="sexsiyyetler">
                        </div>
                    }
                </div>
            </div>
            <!-- <div class="col-md-2"></div> -->
            <div class="col-md-6 leftSide">
                <div class="mb-4">
                    <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
                    <h3 style="display: inline; color: #333333;">Video</h3>
                </div>
                <div class="col-md-12 d-flex">
                    @foreach (var video in Model.Videos)
                    {
                        <div class="col-md-4">
                            <video class="mb-2" width="150" style="height:142px" src="~/video/@video.Path" controls>
                            </video>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- foto video section end  -->
