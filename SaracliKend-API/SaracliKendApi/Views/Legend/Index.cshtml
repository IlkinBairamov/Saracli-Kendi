@model List<LegendVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="padding-left: 0;">
    <div class="row">
        <div class="col-md-12 mt-3">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
            <h3 style="display: inline; color: black;">Rəvayətlər</h3>
        </div>
        @if(Model.Count > 0){
            foreach (var item in Model)
            {
                <p style="text-align: justify; font-weight: bold; " class="mt-3">@item.Name</p>
                <div class="col-md-9">
                    <div style="overflow-wrap:anywhere; ">@Html.Raw(item.Content) </div>
                </div>
                <div class="col-md-3" style="height:232px">
                    <img style="width: 100%; height:215px" src="~/img/legend/@item.Image" alt="">
                </div>
                <hr style="color: #00B0FF;">
            }
        } else {
            <p>Hec bir melumat tapilmadi.</p>
        }
       
    </div>
</div>

