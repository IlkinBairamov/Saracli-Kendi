@model List<LegendVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="padding-left: 0;">
    <div class="row">
        <div class="col-md-12 mt-3">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="./assets/img/Ellipse 4.png" alt="">
            <h3 style="display: inline; color: black;">Revayetler</h3>
        </div>
        @if(Model.Count > 0){
            foreach (var item in Model)
            {
                <div class="col-md-12">
                    <p style="text-align: justify; font-weight: bold; color: black;" class="mt-3">@item.Name</p>
                    <div class="col-md-12 d-flex">
                        <div class="col-md-8">
                            <p style="text-align: justify; color: black;">@Html.Raw(item.Content)</p>
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-md-3">
                            <img style="max-width: 100%;" src="~/img/@item.Image" alt="">
                        </div>
                    </div>
                    <hr style="color: #00B0FF;">
                </div>
            }
        } else {
            <p>Hec bir melumat tapilmadi.</p>
        }
       
    </div>
</div>

