<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/20d3d25df9.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/index.css">
    <title>Saracli Kendi</title>
</head>
<body>
    <header style="height: 140px;">

        <nav id="navbar" class="transparant">
            <div class="container">
                <div class="row ">
                    <div class="col-md-6 navImg">
                        <img style="height: 80px;" src="~/img/Saraçlı - 1 - Düzenlendi.png" alt="">
                    </div>
                    <div class="col-md-6 navImg" style="text-align: end; margin-top: 24px;">
                        <img src="~/img/Mənim əzəl gözəl Saraçlım.png" alt="">
                    </div>
                </div>
            </div>
            <div class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <ul class="navList navbar-nav mr-auto ">
                        <li class="nav-item active">
                            <img src="~/img/Vector (11).png" alt="">
                            <a class="nav-link" asp-controller="Home">Ana Səhifə</a>
                        </li>
                        <li class="nav-item dropdown">
                            <img src="~/img/Vector (12).png" alt="">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Kend haqqinda
                            </a>
                            <div class="dropdown-menu second" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Information" asp-action="GeneralInformation">Umumi melumat</a>
                                <a class="dropdown-item" asp-controller="Information" asp-action="Location">Fiziki Movqeyi</a>
                                <a class="dropdown-item" asp-controller="Legend" asp-action="Index">Revayetler</a>
                                <a class="dropdown-item" asp-controller="Poetry" asp-action="Index">Kend Haqqinda seirler</a>
                                <a class="dropdown-item" asp-controller="FunnyStory" asp-action="Index">Mezeli Ehvalatlar</a>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <img src="~/img/Vector (13).png" alt="">
                            <a class="nav-link" asp-controller="News" asp-action="Index">Xeberler</a>
                        </li>

                        <li class="nav-item dropdown">
                            <img src="~/img/Group (1).png" alt="">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Sexsiyyetler
                            </a>
                            <div class="dropdown-menu second" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="0">Gorkemli Sesiyyetler</a>
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="1">Taninmislar</a>
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="2">Ziyalilar</a>
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="3">Veteranlar</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <img src="~/img/Group.png" alt="">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Sehid ve Qaziler
                            </a>
                            <div class="dropdown-menu second" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="4">Sehidler</a>
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="5">Qaziler</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <img src="~/img/Vector (16).png" alt="">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Mekteb ve Muellimler
                            </a>
                            <div class="dropdown-menu second" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="School" asp-action="Index">Mekteb Haqqinda</a>
                                <a class="dropdown-item" asp-controller="Person" asp-action="Index" asp-route-personType="6">Muellimler</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <img src="~/img/gallery.png" alt="">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                Qalereya
                            </a>
                            <div class="dropdown-menu second" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="File" asp-action="Index" asp-route-fileType="@SaracliKend.Domain.Enums.FileType.Image">Foto</a>
                                <a class="dropdown-item" asp-controller="File" asp-action="Index" asp-route-fileType="@SaracliKend.Domain.Enums.FileType.Video">Video</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="div" style="background-color: #333333; margin-top: 50px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <p style="color: white;">Haqqında</p>
                        <p style="color: white;">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quod laboriosam blanditiis est sequi esse repellend</p>
                    </div>
                    <div class="col-md-4">
                        <div class="elage">

                            <ul style="padding-left: 0;">
                                <li>
                                    <p style="color: white;">Əlaqə</p>
                                </li>
                                <li>
                                    <img src="~/img/Vector (9).png" alt="">
                                    <p style="color: white; display: inline;">+994505005050</p>
                                </li>
                                <li>
                                    <img src="~/img/Vector (10).png" alt="">
                                    <p style="color: white; display: inline;">saraclıkənd@mail.ru</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 iconlar d-flex justify-content-center align-items-center">
                        <a style="margin-right:10px" href="facebook.com"><img src="~/img/Vector (7).png" alt="facebook"></a>
                        <a href="instagram.com"><img src="~/img/Vector (8).png" alt="instagram"></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/index.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
