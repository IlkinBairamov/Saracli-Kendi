@model List<NewsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mt-3" style="margin-bottom: 20px;">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="./assets/img/Ellipse 4.png" alt="">
            <h3 style="display: inline; ">Xəbərlər</h3>
        </div>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-md-2">
                    <img style="max-width: 100%;" src="~/img/@item.Image" alt="">
                </div>
                <div class="col-md-10" style="height: 159px; background-color: white; border-radius: 10px; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);">
                    <p style="margin-top: 10px; margin-bottom: 10px; height: 100px; overflow: hidden;">@item.Content</p>
                    <div class="d-flex justify-content-end" style="margin-bottom: 10px;">
                        <a class="etrafliButton" style=" text-decoration: none;" asp-controller="News" asp-action="Details" asp-route-id="@item.Id">
                            Etrafli
                        </a>
                    </div>
                </div>
                <hr style="color: #00B0FF;" class="mt-3">
            }
        } else {
            <p>Hec bir melumat tapilmadi.</p>
        }
    </div>
</div>

