@model List<FunnyStoryVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="padding-left: 0;" id="seirler">
    <div class="row">
        <div class="col-md-12 mt-3 mb-5 ">
            <img style="margin-left:5px; margin-right:10px; margin-bottom: 5px;" src="~/img/Ellipse 4.png" alt="">
            <h3 style="display: inline; color: black;">Əhvəlatlar</h3>
        </div>
        @if(Model.Count > 0){
            foreach (var item in Model)
            {
                <div class="col-md-12">
                    <p style="margin-left: 20px; font-weight: bold; color: black;" class="mt-3">@item.Name</p>
                    <div style="overflow-wrap:anywhere; padding:20px">@Html.Raw(item.Content)</div>
                    <div class="d-flex justify-content-end">
                        <a class="etrafliButton" style=" text-decoration: none;" asp-controller="FunnyStory" asp-action="Details" asp-route-id="@item.Id">
                            Ətraflı
                        </a>
                    </div>
                </div>
                <hr style="color: #00B0FF;" class="mt-3">
            }
        } else {
            <p>Hec bir melumat tapilmadi.</p>
        }
    </div>
</div>

