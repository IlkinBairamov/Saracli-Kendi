@model PersonModel
@{
    ViewData["Title"] = "Details";
}

<div class="card text-center">
    <img class="card-img-top m-auto" src="~/img/person/@Model.Image" alt="Card image cap" style="max-width: 400px;">
    <h1 class="card-title text-success mt-2">@Model.Name @Model.Surname</h1>

    <div class="d-flex justify-content-between">
        <div class="card-body text-start col-7 p-5">
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>

